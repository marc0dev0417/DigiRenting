<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/image_view_first"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="start|top"
            android:layout_marginLeft="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/house_icon_add" />

        <ImageView
            android:id="@+id/image_view_second"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="end|top"
            android:layout_marginRight="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/house_icon_add" />


        <Button
            android:id="@+id/button_choose"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="140dp"
            android:background="@drawable/button_rounded"
            android:text="@string/Choose" />

        <EditText
            android:id="@+id/region_add_house"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:textColorHint="@color/secondaryText"
            android:textColor="@color/importantText"
            android:hint="@string/Region"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/address_add_house"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:textColorHint="@color/secondaryText"
            android:textColor="@color/importantText"
            android:hint="@string/Address"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/price_add_house"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:textColorHint="@color/secondaryText"
            android:textColor="@color/importantText"
            android:hint="@string/Price"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/space_add_house"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="216dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:textColorHint="@color/secondaryText"
            android:textColor="@color/importantText"
            android:hint="@string/Space"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/description_add_house"
            android:layout_width="317dp"
            android:layout_height="90dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:textColorHint="@color/secondaryText"
            android:textColor="@color/importantText"
            android:hint="@string/Description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center|bottom"
            android:text="@string/Upload"
            android:layout_marginBottom="25dp"/>
    </FrameLayout>

</RelativeLayout>