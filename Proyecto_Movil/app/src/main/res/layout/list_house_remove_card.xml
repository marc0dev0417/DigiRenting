<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_rounded_border"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_house_url"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/item_region_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_house_url"
            android:layout_toRightOf="@id/image_house_url"
            android:text="Titulo"
            android:textColor="@color/importantText"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_price_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textColor="@color/secondaryText"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/image_house_url"
            android:layout_toRightOf="@id/image_house_url"
            android:layout_below="@id/item_region_remove"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/button_remove"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>