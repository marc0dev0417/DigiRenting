<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorItem4End"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:id="@+id/frament_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"></FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        app:menu="@menu/top_navigation"
        app:backgroundTint="@color/bordersAndFill"
        app:iconSize="30dp"
        app:iconTint="@color/secondaryText"
        app:iconTintActive="@color/white"
        app:textColor="@color/importantText"
        app:textSize="20sp"/>

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:iconSize="23dp"
        app:iconTint="@color/secondaryText"
        app:iconTintActive="@color/bordersAndFill"
        app:indicatorColor="#ECECEC"
        app:indicatorRadius="25dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation_menu"
        app:textColor="@color/importantText"
        app:textSize="15sp" />

</RelativeLayout>