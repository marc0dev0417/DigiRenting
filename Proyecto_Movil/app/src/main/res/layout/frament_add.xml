<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorItem4End">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Picture"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="start|top"
            android:id="@+id/image_view_first"
            android:background="#646464" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center|top"
            android:id="@+id/image_view_second"
            android:background="#646464" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="end|top"
            android:id="@+id/image_view_third"
            android:background="#646464" />

        <Button
            android:id="@+id/button_choose"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="140dp"
            android:text="Choose" />

        <EditText
            android:id="@+id/region_add_house"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="@color/black"
            android:hint="Region"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/address_add_house"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="@color/black"
            android:hint="Address"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/price_add_house"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="@color/black"
            android:hint="Price"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/space_add_house"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="@color/black"
            android:hint="Space"
            android:inputType="textPersonName"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/description_add_house"
            android:layout_width="317dp"
            android:layout_height="130dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="@color/black"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:paddingVertical="13dp"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="100dp"
            android:text="Upload" />
    </FrameLayout>

</RelativeLayout>